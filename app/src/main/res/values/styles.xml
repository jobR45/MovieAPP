<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Views -->
    <style name="TextView" />

    <style name="TextView.Title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_24sp</item>
    </style>

    <style name="TextView.TitleMedium" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>
    <style name="TextView.Small" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_18sp</item>
    </style>

    <style name="TextView.Tiny" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>
    <style name="TextView.Error" parent="android:Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>


    <!-- Buttons-->
    <style name="Button"/>
    <style name="Button.Blue" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_20sp </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_global_10dp</item>
        <item name="android:background">@drawable/background_border_rectangle</item>
    </style>
</resources>